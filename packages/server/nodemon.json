{
  "restartable": "rs",
  "verbose": true,
  "watch": [
    "src",
    ".env",
    "package.json",
    "tsconfig.json"
  ],
  "ignore": [
    "**/*.{spec,test}.ts",
    "logs/*"
  ],
  "delay": "1000",
  "exec": "ts-node -r tsconfig-paths/register --transpile-only main.ts",
  "ext": "ts,ejs,yml,json,js"
}